<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kan_bagisi_app">

    <!-- ðŸ”” Android 13+ bildirim izni -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- ðŸ“ Konum izinleri -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- ðŸŒ Ä°nternet izni -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:label="kan_bagisi_app"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true">

        <!-- âœ… Google Maps API key (res/values/google_maps_api.xml iÃ§indeki google_maps_api_key) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />

        <!-- ðŸ”” FCM iÃ§in varsayÄ±lan bildirim simgesi -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />

        <!-- Flutter embedding sÃ¼rÃ¼mÃ¼ -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Splash ekran temasÄ± -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- âŒ FirebaseMessagingService'i ayrÄ±ca tanÄ±mlamaya gerek yok; kÃ¼tÃ¼phane ekler. -->
    </application>

    <!-- PROCESS_TEXT sorgusu (opsiyonel) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
